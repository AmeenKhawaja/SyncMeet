<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">

    <GridLayout
        android:id="@+id/meeting_card_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="2"
        android:rowCount="5"
        android:padding="16dp">

        <TextView
            android:id="@+id/meeting_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_row="2"
            android:text="Start: Monday, March 10"
            />
        <TextView
            android:id="@+id/meeting_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="16sp"
            android:text="End: Monday, March 10"
            />
        <ImageButton
            android:id="@+id/edit_button_card"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@drawable/dots"
            android:scaleType="fitCenter"
            android:src="@drawable/dots"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="10:00 AM - 11:00 AM" />

        <TextView
            android:id="@+id/meeting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Description of the meeting." />
        <TextView
            android:id="@+id/contacts_invited_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Contacts invited: "
            android:layout_columnSpan="2"/>

    </GridLayout>
</androidx.cardview.widget.CardView>